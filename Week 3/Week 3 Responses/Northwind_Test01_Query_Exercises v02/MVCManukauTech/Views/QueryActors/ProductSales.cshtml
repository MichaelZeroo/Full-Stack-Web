@model IEnumerable<MVCManukauTech.ViewModels.ProductSales>

@{
    ViewData["Title"] = "ProductSales";
}

<h1>ProductSales</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sales)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
