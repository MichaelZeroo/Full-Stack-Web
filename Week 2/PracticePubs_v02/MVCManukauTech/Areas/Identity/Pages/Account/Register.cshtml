@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NumberOfBooksPublished"></label>
                <input asp-for="Input.NumberOfBooksPublished" class="form-control" />
                <span asp-validation-for="Input.NumberOfBooksPublished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AnnualEarnings"></label>
                <input asp-for="Input.AnnualEarnings" class="form-control" />
                <span asp-validation-for="Input.AnnualEarnings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Zip"></label>
                <input asp-for="Input.Zip" class="form-control" />
                <span asp-validation-for="Input.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UsualEditor"></label>
                <input asp-for="Input.UsualEditor" class="form-control" />
                <span asp-validation-for="Input.UsualEditor" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
